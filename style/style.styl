body
    margin 0
    padding 0 
header
    width 100% 
    height 100px
    box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px
    position relative
    background-color: none


    .wrapper
        max-width 1300px 
        margin auto 
        display flex 
        align-items center 
        height: 100%
        justify-content: space-between
        padding: 0 10px
        background rgb(255, 255, 255)
        z-index 10
        position relative

        &-logo
            width: 50px
            height: 50px

            img
                width: 100%
                height: 100%
        
        &-hamburger
            width 50px
            height 30px
            display flex
            flex-direction column
            justify-content space-between
            cursor pointer
            margin-right: 20px
            transition: transform ease 1s

            span
                transition: transform ease 1s 
                transition: ease 1s 
                border: 2px solid black

            @media only screen and (min-width: 768px)
                display: none

        .is-active
 
            transform: rotate(360deg)

            span:nth-child(1)

                transform: rotate(45deg) translate(6px, 13px)
            
            span:nth-child(2)

                opacity 0

            span:nth-child(3)
                transform: rotate(-45deg) translate(4px, -13px)

    nav
        position: absolute
        left: 50% 
        transform: translateX(-50%) translateY(-350px)
        z-index: 1
        width: 100%
        display: flex
        flex-direction: column
        gap: 36px
        justify-content: center
        align-items: center
        padding: 16px 0
        box-shadow: rgba(0, 0, 0, 0.1) 0px 4px 12px
        transition: transform ease 1s

        a
            font-family: Arial, Helvetica, sans-serif
            text-decoration: none
            color black
            font-weight: bold
            transition: ease .3s

        @media only screen and (min-width: 768px)
            z-index: 10 
            flex-direction: row
            justify-content: flex-end 
            padding-right: 60px
            transform: translate(-50%, -150%)
            max-width: 1300px
            background: none
            box-shadow: none

            a:hover
                color red


    .is-open
      
        transform: translateX(-50%) translateY(0px)
        